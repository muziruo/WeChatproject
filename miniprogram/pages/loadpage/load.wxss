/* miniprogram/pages/loadpage/load.wxss */
.externalarea {
  background: #f4f4f4;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 20rpx;
  border-radius: 20rpx;
}

.firstarea {
  margin: 20rpx;
  display: flex;
  flex-direction: column;
}

.shipname {
  font-size: 35rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.secondarea {
  margin: 20rpx;
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.agencyname {
  font-size: 30rpx;
  color: #404040;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ownername {
  font-size: 30rpx;
  color: #404040;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.bottomarea {
  margin-top: 30rpx;
  height: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.bottomtext {
  color: #404040;
  font-size: 25rpx;
  margin: 5rpx;
}
