/* miniprogram/pages/registerpage/register.wxss */
.listarea {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 30rpx;
  margin-left: 35rpx;
  margin-right: 35rpx;
}

.infotitle {
  font-size: 30rpx;
  color: #404040;
  white-space: nowrap;
}

.infoinputarea {
  margin-left: 35rpx;
  margin-right: 35rpx;
  margin-top: 20rpx;
}

.inputarea {
  width: 100%;
}

.completestate {
  background-color: #f4f4f4;
  border-radius: 15rpx;
  width: 100%;
  font-size: 30rpx;
  color: #404040;
}

.infodetail {
  font-size: 30rpx;
  color: #404040;
  margin-left: 20rpx;
}

.tiparea {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
}

.tipinfo {
  font-size: 25rpx;
  color: red;
}

.tipfinished {
  font-size: 25rpx;
  color: #1fa115;
}

.bottombutton {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 20rpx;
}

.correct {
  width: 40%;
}

.error {
  width: 40%;
}

.bottomarea {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
}

.bottomtext {
  font-size: 15rpx;
  color: #404040;
  margin: 10rpx;
}